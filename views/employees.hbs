<h2>Employees</h2>

{{! READ table }}
<table>
    <thead>
        {{! printing the DB attributes for the header }}
        <tr>

            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>

        </tr>
    </thead>

    <tbody>
        {{! For each row, print the employeeID, fName, lName, email, phone }}
        {{#each employees}}
        <tr>
            <td>{{this.employeeID}}</td>
            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>

        </tr>
        {{/each}}
    </tbody>
</table>