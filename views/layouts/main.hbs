</body>
        {{{body}}}

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var resetForm = document.getElementById('resetForm');
                if (!resetForm) return;
                resetForm.addEventListener('submit', function (e) {
                    var confirmed = confirm('Are you sure you want to reset the database? This action cannot be undone.');
                    if (!confirmed) {
                        e.preventDefault();
                    }
                });
            });
        </script>

</body>
